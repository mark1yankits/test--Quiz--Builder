generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quiz {
  id        String    @id @default(uuid())
  title     String
  questions Question[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("quizzes")
}

model Question {
  id            String   @id @default(uuid())
  text          String
  type          QuestionType
  options       String[]
  correctAnswers String[]
  quizId        String
  quiz          Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@map("questions")
}

enum QuestionType {
  boolean
  input
  checkbox
}